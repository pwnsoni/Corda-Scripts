#!/bin/bash
echo "Creating Node for Notary ----------"
mkdir notary$3
cd notary$3
basedir=baseDirectory
basedir=\"\$\{${basedir}\}\"
cat > node.conf<< EOF
devMode=false
myLegalName="$2"
keyStorePassword = "cordacadevpass"
trustStorePassword = "trustpass"
networkServices {
    doormanURL = "http://$6:8080"
    networkMapURL = "http://$5:8080"
}
notary {
    validating=$4
}
cordappSignerKeyFingerprintBlacklist = []
dataSourceProperties {
    dataSourceClassName = org.h2.jdbcx.JdbcDataSource
    dataSource.url = "jdbc:h2:file:$basedir/persistence"
    dataSource.user = sa
    dataSource.password = ""
}
p2pAddress="0.0.0.0:10200"
rpcSettings {
    address="$1:10201"
    adminAddress="$1:10202"
}
rpcUsers=[
    {
        password=test
        permissions=[
            ALL
        ]
        user=user1
    }
]
EOF
echo "Successfully created Notary with IP - $1"
cd ..
